{
  "name": "workspace",
  "version": "0.0.2-dev.2",
  "private": true,
  "scripts": {
    "prepare": "run-s prepare:*",
    "prepare:clean-tags": "pnpm run clean-tags",
    "prepare:husky": "husky install",
    "pre-commit": "run-s pre-commit:*",
    "pre-commit:tags": "pnpm run clean-tags",
    "pre-commit:set-version-placeholders": "pnpm run set-version-placeholders",
    "pre-commit:projects": "pnpm -r run pre-commit",
    "pre-commit:git-add": "git add -u",
    "clean-tags": "git tag | xargs git tag -d",
    "build": "pnpm -r run build",
    "pack": "pnpm -r run pack",
    "start": "pnpm -r run start",
    "startd": "pnpm -r run startd",
    "test": "pnpm -r run test",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "fix:projects": "pnpm -r run fix",
    "set-version": "run-p \"set-version:* {1}\" --",
    "set-version:set-version": "pnpm version --allow-same-version --commit-hooks=false --git-tag-version=false",
    "set-version:set-project-versions": "pnpm -r run set-version",
    "set-version-placeholders": "pnpm -r run set-version 0.0.0-PLACEHOLDER",
    "reset-hard": "run-s reset-hard:*",
    "reset-hard:git-clean": "git clean -dfx && git reset --hard",
    "reset-hard:install": "pnpm install --force",
    "actions-build": "pnpm run build",
    "actions-pack": "pnpm run pack",
    "actions-test": "pnpm run test",
    "actions-set-version": "pnpm run set-version"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all2": "^6.0.5",
    "prettier": "^2.8.3"
  }
}
